<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_bg">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:src="@drawable/slideshow" />

    <com.drkeironbrown.lifecoach.custom.TfTextView
        android:id="@+id/txtCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Vision Videos"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:isBold="true" />

    <com.drkeironbrown.lifecoach.custom.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Put your photos in motion!  Select and post photos of your goals, select some music to go along with them, and now you have a slideshow of your journey and your success, complete with a soundtrack!"
        android:textColor="@color/off_white"
        android:textSize="16sp" />
</RelativeLayout>