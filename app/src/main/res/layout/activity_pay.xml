<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cyan_bg"
    android:orientation="vertical"
    android:padding="@dimen/padding_16"
    tools:context=".ui.PayActivity">



    <com.drkeironbrown.lifecoach.custom.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="@dimen/padding_8"
        android:text="Enjoy the Free version of Active Life Coach to see how this tool can help you live a better life!"
        android:textColor="@color/off_white"
        android:textSize="16sp" />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <com.drkeironbrown.lifecoach.custom.TfTextView
            android:id="@+id/txtFree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp"
            android:text="Free"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:isBold="true" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <View
            android:layout_width="92dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtLabelOr"
            android:background="@color/white" />

        <View
            android:layout_width="92dp"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtLabelOr"
            android:background="@color/white" />

        <com.drkeironbrown.lifecoach.custom.TfTextView
            android:id="@+id/txtLabelOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="OR"
            android:textColor="@color/white" />
    </RelativeLayout>

    <com.drkeironbrown.lifecoach.custom.TfTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCategory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:padding="@dimen/padding_8"
        android:text="With all of its features unlocked, you have full access to tools that will help you to change and improve the quality of your life!"
        android:textColor="@color/off_white"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <com.drkeironbrown.lifecoach.custom.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="6dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/txtPrice"
            android:gravity="top"
            android:text="$"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.drkeironbrown.lifecoach.custom.TfTextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="7.99"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:isBold="true" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <com.drkeironbrown.lifecoach.custom.TfTextView
            android:id="@+id/txtPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingTop="8dp"
            android:paddingRight="32dp"
            android:paddingBottom="8dp"
            android:text="Premium"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:isBold="true" />

    </android.support.v7.widget.CardView>

</LinearLayout>